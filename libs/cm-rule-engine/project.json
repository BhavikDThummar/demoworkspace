{
  "name": "@org/cm-rule-engine",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/cm-rule-engine/src",
  "projectType": "library",
  "tags": ["type:library", "scope:shared", "performance:high"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "commands": [
          "nx build-node @org/cm-rule-engine",
          "nx build-browser @org/cm-rule-engine",
          "node libs/cm-rule-engine/scripts/fix-package-json.js"
        ],
        "parallel": false
      }
    },
    "build-node": {
      "executor": "@nx/js:tsc",
      "outputs": ["{projectRoot}/dist/node"],
      "options": {
        "outputPath": "libs/cm-rule-engine/dist/node",
        "main": "libs/cm-rule-engine/src/index.node.ts",
        "tsConfig": "libs/cm-rule-engine/tsconfig.lib.json",
        "assets": [
          "libs/cm-rule-engine/*.md",
          "libs/cm-rule-engine/package.json"
        ]
      }
    },
    "build-browser": {
      "executor": "@nx/js:tsc",
      "outputs": ["{projectRoot}/dist/browser"],
      "options": {
        "outputPath": "libs/cm-rule-engine/dist/browser",
        "main": "libs/cm-rule-engine/src/index.browser.ts",
        "tsConfig": "libs/cm-rule-engine/tsconfig.browser.json",
        "assets": ["libs/cm-rule-engine/*.md", "libs/cm-rule-engine/package.json"]
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/cm-rule-engine/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/cm-rule-engine/jest.config.ts"
      }
    },
    "test:watch": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/cm-rule-engine/jest.config.ts",
        "watch": true
      }
    }
  }
}

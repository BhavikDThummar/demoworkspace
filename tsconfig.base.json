{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@org/cm-rule-engine": ["libs/cm-rule-engine/src/index.ts"],
      "@org/database": ["libs/database/src/index.ts"],
      "@org/entities": ["libs/entities/src/index.ts"],
      "@org/minimal-gorules": ["libs/minimal-gorules/src/index.ts"]
    }
  }
}

# Server Configuration
PORT=8000
NODE_ENV=development

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bomdemoapi
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=username
DATABASE_PASSWORD=password
DATABASE_NAME=bomdemoapi

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug

# GoRules Configuration
GORULES_API_URL=https://triveni.gorules.io
GORULES_API_KEY=your-api-key-here
GORULES_PROJECT_ID=your-project-id-here
GORULES_TIMEOUT=30000
GORULES_RETRY_ATTEMPTS=3
GORULES_ENABLE_LOGGING=true

# Minimal GoRules Engine Configuration
# These can be used as fallback when minimalGoRules config object is not provided
GORULES_CACHE_MAX_SIZE=1000
GORULES_HTTP_TIMEOUT=5000
GORULES_BATCH_SIZE=50


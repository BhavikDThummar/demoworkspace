{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist/node",
    "tsBuildInfoFile": "dist/node/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    // Node.js environment
    "types": ["node"],
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    // Module interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    // Output options
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // NestJS decorator support
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "references": [],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/examples/**/*",
    "src/test-setup.ts",
    "src/**/testing/**/*",
    "src/**/version/demo-*.ts",
    "src/**/react/**/*",
    "src/**/*.tsx",
    "src/index.browser.ts"
  ]
}

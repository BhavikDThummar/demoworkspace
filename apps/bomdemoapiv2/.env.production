# Server Configuration
PORT=8001
NODE_ENV=development

# HTTPS Configuration
# Set to 'true' to enable HTTPS, 'false' for HTTP only
ENABLE_HTTPS=false

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Logging
LOG_LEVEL=error

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# Go Rule Config
GORULES_API_URL=https://triveni.gorules.io
GORULES_API_KEY=test-api-key
GORULES_PROJECT_ID=test-project-id
GORULES_CACHE_MAX_SIZE=1000
GORULES_TIMEOUT=5000
GORULES_BATCH_SIZE=50

# Database Configuration (Update with your actual database credentials)
DATABASE_URL=postgresql://localhost:5432/bomdemoapi_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=bomdemoapi_dev